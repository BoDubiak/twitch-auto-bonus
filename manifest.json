{
  "manifest_version": 3,
  "name": "Twitch Helper (Bonus + Overlay + Predictions)",
  "version": "1.2.0",
  "description": "Automates Channel Points bonus, closes the AdBlock overlay, and auto-votes in Predictions.",
  "icons": { "128": "icon128.png" },
  "action": {
    "default_title": "Twitch Helper",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
